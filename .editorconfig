# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.html]
indent_size = 2
max_line_length = 120

[*.ts]
indent_size = 2
max_line_length = 100
quote_type = single
ij_typescript_use_double_quotes = false

[*.scss]
indent_size = 2

[Makefile]
indent_style = tab
